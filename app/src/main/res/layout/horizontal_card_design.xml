<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/kor_cocobibi"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/most_viewed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/mv_image"
            android:fontFamily="@font/baloo"
            android:text=""
            android:textColor="#272727"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/most_viewed_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/most_viewed_title"
            android:layout_toEndOf="@id/mv_image"
            android:layout_marginStart="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/most_viewed_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_viewed_rating"
            android:layout_toEndOf="@id/mv_image"
            android:padding="10dp"
            android:text="" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>